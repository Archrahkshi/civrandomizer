<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayoutEditCiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextLeader"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/alegreya_sc"
            android:hint="@string/leader"
            android:importantForAutofill="no"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusRight="@+id/editTextNation"
            android:nextFocusDown="@+id/editTextNation"
            android:nextFocusForward="@+id/editTextNation"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextNation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/alegreya_sc"
            android:hint="@string/nation"
            android:importantForAutofill="no"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusRight="@+id/editTextAuthor"
            android:nextFocusDown="@+id/editTextAuthor"
            android:nextFocusForward="@+id/editTextAuthor"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextAuthor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/alegreya_sc"
            android:hint="@string/author"
            android:importantForAutofill="no"
            android:inputType="textPersonName|textCapWords"
            android:nextFocusLeft="@+id/editTextNation"
            android:nextFocusUp="@+id/editTextNation"
            android:nextFocusDown="@+id/buttonDone"
            android:nextFocusForward="@+id/buttonDone"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonDone"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/alegreya_sc"
            android:text="@string/done"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>